{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "dom", "dom.iterable"],
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-test",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ],
    "types": ["typePatches"]
}
